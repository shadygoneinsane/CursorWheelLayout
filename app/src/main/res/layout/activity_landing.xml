<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CursorWheelLayout Demo"
        android:textColor="@color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Choose which demo you'd like to explore:"
        android:textColor="@color/secondary_text_light"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/btn_original_demo" />

    <Button
        android:id="@+id/btn_original_demo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Original Demo"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/primary_text_drak"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintBottom_toTopOf="@id/btn_sample_wheel" />

    <Button
        android:id="@+id/btn_sample_wheel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sample Wheel Demo"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/primary_text_drak"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_original_demo"
        app:layout_constraintBottom_toTopOf="@id/btn_compose_wheel" />

    <Button
        android:id="@+id/btn_compose_wheel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Compose Wheel Demo"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/primary_text_drak"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sample_wheel"
        app:layout_constraintBottom_toTopOf="@id/btn_advanced_wheel" />

    <Button
        android:id="@+id/btn_advanced_wheel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Advanced Wheel APIs"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/primary_text_drak"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_compose_wheel"
        app:layout_constraintBottom_toTopOf="@id/btn_compose_main" />

    <Button
        android:id="@+id/btn_compose_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Compose Main Demo"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/primary_text_drak"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_advanced_wheel"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>